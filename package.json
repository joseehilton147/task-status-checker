{
  "name": "task-status-checker",
  "version": "2.0.0",
  "description": "Task Status Checker with Focus Chain Anti-Poisoning",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "task-status-checker": "./dist/server.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "npm run build && node dist/index.test.js",
    "start": "node dist/server.js",
    "start:mcp": "node dist/server.js --mcp",
    "validate": "npm run build && npm test"
  },
  "keywords": [
    "task-management",
    "status-checker",
    "alfredo",
    "typescript",
    "esm"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "devDependencies": {
    "@types/node": "^24.3.0",
    "typescript": "^5.9.2"
  }
}
